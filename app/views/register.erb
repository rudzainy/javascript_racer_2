<div class="container" align="center">
  <h1>New player registration</h1>
  <p><%= @flag %></p>

  <form action='/register' method='post'>
    <table width="250px">
      <tr height="50px">
        <td width="100px">Name:</td>
        <td><input name='name' type='text' autofocus></td>
      </tr>
      <tr height="50px">
        <td width="100px">Alias:</td>
        <td><input name='nickname' type='text'></td>
      </tr>
      <tr height="50px">
        <td colspan = "2" align="right"><input type="submit" name="register" class="button"></td>
      </tr>
    </table>
  </form>
  <a href="../"><button>Main Page</button></a>
</div>